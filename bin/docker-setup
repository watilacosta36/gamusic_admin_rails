    echo "‚ùå Docker Compose n√£o encontrado. Instale o Docker Compose primeiro."
    exit 1
fi

echo "‚úÖ Docker e Docker Compose encontrados"

# Create .env file if it doesn't exist
if [ ! -f .env ]; then
    echo "üìã Criando arquivo .env..."
    cp .env.docker .env
    echo "‚ö†Ô∏è  IMPORTANTE: Edite o arquivo .env com suas credenciais Supabase!"
    echo "   Arquivo criado: .env"
else
    echo "‚úÖ Arquivo .env j√° existe"
fi

