<% content_for :page_title, "Login" %>

<div class="min-h-screen w-full bg-gradient-to-br from-blue-100 via-purple-100 to-pink-100 dark:from-gray-900
  dark:via-gray-800 dark:to-gray-900 flex items-center justify-center">
  <div class="max-w-md w-full bg-white dark:bg-gray-800 rounded-2xl shadow-2xl p-10">
    <div class="text-center mb-8">
      <h1 class="text-4xl font-extrabold text-gray-900 dark:text-white">GaMusic Admin</h1>
      <p class="mt-2 text-gray-600 dark:text-gray-400 text-lg">Fa√ßa login para o painel administrativo</p>
    </div>

    <%= form_with url: login_path, method: :post, local: true, class: "space-y-6" do |form| %>
      <div>
        <%= form.label :email, "Email", class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
        <%= form.email_field :email, required: true,
                             class: "mt-1 block w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-xl
                             shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500
                             dark:bg-gray-700 dark:text-white transition duration-200" %>
      </div>

      <div>
        <%= form.label :password, "Senha", class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
        <%= form.password_field :password, required: true,
                                class: "mt-1 block w-full px-4 py-3 border border-gray-300 dark:border-gray-600
                                rounded-xl shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500
                                focus:border-blue-500 dark:bg-gray-700 dark:text-white transition duration-200" %>
      </div>

      <div>
        <%= form.submit "Entrar",
                        class: "w-full py-3 px-4 rounded-xl shadow-md text-white font-semibold bg-blue-600
                        hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500
                        transition duration-200" %>
      </div>
    <% end %>

    <% if flash[:alert] %>
      <div class="mt-6 p-4 bg-red-100 dark:bg-red-800 text-red-800 dark:text-red-200 rounded-xl shadow-sm text-center
        font-medium">
        <%= flash[:alert] %>
      </div>
    <% end %>
  </div>
</div>
