<% content_for :page_title, "Login" %>

<div class="max-w-md w-full bg-white dark:bg-gray-800 rounded-lg shadow-md p-8">
  <div class="text-center mb-8">
    <h1 class="text-3xl font-bold text-gray-900 dark:text-white">GaMusic Admin</h1>
    <p class="text-gray-600 dark:text-gray-400 mt-2">Entre com suas credenciais</p>
  </div>

  <%= form_with url: login_path, method: :post, local: true, class: "space-y-6" do |form| %>
    <div>
      <%= form.label :email, "Email", class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
      <%= form.email_field :email, required: true, 
          class: "mt-1 block w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-white" %>
    </div>

    <div>
      <%= form.label :password, "Senha", class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
      <%= form.password_field :password, required: true,
          class: "mt-1 block w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-white" %>
    </div>

    <div>
      <%= form.submit "Entrar", 
          class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
    </div>
  <% end %>

  <% if flash[:alert] %>
    <div class="mt-4 p-3 bg-red-100 text-red-800 rounded-md">
      <%= flash[:alert] %>
    </div>
  <% end %>
</div>