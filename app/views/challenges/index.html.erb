<% content_for :page_title, "Desafios Musicais" %>

<div class="mb-6">
  <div class="flex justify-between items-center">
    <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Desafios Musicais</h1>
    <%= link_to "Novo Desafio", new_challenge_path, 
        class: "bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700 inline-flex items-center" %>
  </div>
</div>

<!-- Filtros -->
<div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6 mb-6">
  <%= form_with url: challenges_path, method: :get, local: true, class: "grid grid-cols-1 md:grid-cols-4 gap-4" do |form| %>
    <div>
      <%= form.text_field :search, placeholder: "Buscar por título...", 
          value: params[:search],
          class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md dark:bg-gray-700 dark:text-white" %>
    </div>
    
    <div>
      <%= form.select :category, 
          options_for_select([
            ['Todas as categorias', ''],
            ['Escala', 'escala'],
            ['Acorde', 'acorde'], 
            ['Arpejo', 'arpejo'],
            ['Ritmo', 'ritmo'],
            ['Melodia', 'melodia'],
            ['Harmonia', 'harmonia'],
            ['Técnica', 'tecnica']
          ], params[:category]),
          {},
          { class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md dark:bg-gray-700 dark:text-white" } %>
    </div>
    
    <div>
      <%= form.select :difficulty, 
          options_for_select([
            ['Todas as dificuldades', ''],
            ['Iniciante', 'iniciante'],
            ['Intermediário', 'intermediario'],
            ['Avançado', 'avancado']
          ], params[:difficulty]),
          {},
          { class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md dark:bg-gray-700 dark:text-white" } %>
    </div>
    
    <div>
      <%= form.submit "Filtrar", 
          class: "w-full bg-gray-600 text-white px-4 py-2 rounded-md hover:bg-gray-700" %>
    </div>
  <% end %>
</div>

<!-- Tabela de desafios -->
<div class="bg-white dark:bg-gray-800 rounded-lg shadow overflow-hidden">
  <div class="overflow-x-auto">
    <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
      <thead class="bg-gray-50 dark:bg-gray-700">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
            Título
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
            Categoria
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
            Dificuldade
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
            Tom Musical
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
            Tempo
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
            Criado em
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
            Ações
          </th>
        </tr>
      </thead>
      <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700">
        <% @challenges.each do |challenge| %>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="text-sm font-medium text-gray-900 dark:text-white">
                <%= link_to challenge.title, challenge_path(challenge), 
                    class: "hover:text-blue-600" %>
              </div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-blue-100 text-blue-800">
                <%= challenge.category_humanized %>
              </span>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full 
                <%= challenge.difficulty == 'iniciante' ? 'bg-green-100 text-green-800' : 
                    challenge.difficulty == 'intermediario' ? 'bg-yellow-100 text-yellow-800' : 
                    'bg-red-100 text-red-800' %>">
                <%= challenge.difficulty_humanized %>
              </span>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">
              <%= challenge.music_key %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">
              <%= challenge.tempo ? "#{challenge.tempo} BPM" : "-" %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">
              <%= challenge.created_at.strftime("%d/%m/%Y") %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium space-x-2">
              <%= link_to "Ver", challenge_path(challenge), 
                  class: "text-blue-600 hover:text-blue-800" %>
              <%= link_to "Editar", edit_challenge_path(challenge), 
                  class: "text-green-600 hover:text-green-800" %>
              <%= link_to "Excluir", challenge_path(challenge), method: :delete, 
                  confirm: "Tem certeza que deseja excluir este desafio?",
                  class: "text-red-600 hover:text-red-800" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <% if @challenges.empty? %>
    <div class="px-6 py-8 text-center">
      <p class="text-gray-500 dark:text-gray-400">Nenhum desafio encontrado.</p>
      <%= link_to "Criar Novo Desafio", new_challenge_path, 
          class: "mt-4 inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700" %>
    </div>
  <% end %>
</div>